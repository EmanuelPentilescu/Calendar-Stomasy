<!-- edit-event.hbs -->
<form action="/edit-event/<%=event.id%>" method="post">
    <input type="hidden" name="_method" value="put">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%=event.title%>">
    </div>
    <div>
      <label for="start_time">Start Time:</label>
      <input type="datetime-local" id="start_time" name="start_time" value="<%=event.start_time%>">
    </div>
    <div>
      <label for="end_time">End Time:</label>
      <input type="datetime-local" id="end_time" name="end_time" value="<%=event.end_time%>">
    </div>
    <button type="submit" method="post">Edit Event</button>
  </form>
  